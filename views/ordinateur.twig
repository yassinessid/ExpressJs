<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recherche d'ordinateurs</title>
    <script src="/socket.io/socket.io.js"></script> <!-- Intégrer Socket.IO -->
</head>
<body>
    <h1>Recherche d'ordinateurs par catégorie</h1>

    <!-- Zone de texte pour la catégorie -->
    <label for="category">Entrez la catégorie :</label>
    <input type="text" id="category" name="category" placeholder="Exemple: Gaming, Bureau...">

    <!-- Bouton de recherche -->
    <button onclick="searchOrdinateur()">Rechercher</button>

    <h2>Résultats :</h2>
    <ul id="resultList"></ul> <!-- Liste des ordinateurs -->

    <script>
        // Connexion au serveur Socket.io
        const socket = io();

        // Fonction pour envoyer la catégorie et récupérer les résultats
        function searchOrdinateur() {
            const category = document.getElementById("category").value;

            if (!category) {
                alert("Veuillez entrer une catégorie !");
                return;
            }

            // Emission de l'événement 'searchOrdinateur' au serveur avec la catégorie
            socket.emit('searchOrdinateur', category);
        }

        // Ecouter les résultats du serveur et les afficher
        socket.on('ordinateurResults', function (ordinateurs) {
            const resultList = document.getElementById('resultList');
            resultList.innerHTML = ''; // Réinitialiser la liste des résultats

            if (ordinateurs.length === 0) {
                resultList.innerHTML = '<li>Aucun ordinateur trouvé pour cette catégorie.</li>';
            } else {
                ordinateurs.forEach(ordinateur => {
                    const li = document.createElement('li');
                    li.textContent = `${ordinateur.modele} - ${ordinateur.categorie} - Prix : ${ordinateur.prix}€`;
                    resultList.appendChild(li);
                });
            }
        });
    </script>
</body>
</html>
